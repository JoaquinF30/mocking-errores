{{#each products}}
    <div style="border: 2px solid black; padding: 10px; display: flex; flex-direction: column; max-width: 320px">
        <p>Producto: {{ this.product.title }}</p>
        <p>Descripcion del producto: {{ this.product.description }}</p>
        <p>Precio: {{ this.product.price }}</p>
        <p>Codigo del producto: {{ this.product.code }}</p>
        <p>Stock: {{ this.product.stock }}</p>
        <p>Categoria: {{ this.product.category }}</p>
        <p>Estado: {{ this.product.status }}</p>
    </div>
{{/each}}
